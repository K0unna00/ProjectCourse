@model RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;

}

<form asp-action="Register" asp-controller="UserAccount">
    <div class="mb-3">
        <input asp-for="UserName" class="form-control" placeholder="UserName">
    </div>
    <div class="mb-3">
        <input asp-for="Password" class="form-control" placeholder="Password">
    </div>
    <div class="mb-3">
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
    </div>
    <div class="mb-3 mt-4">
        <label for="Role">ChooseRole</label>
        <select id="Role" class="form-control item" asp-for="Role" asp-items="Html.GetEnumSelectList<Roles>()">
        </select>
    </div>

    <span asp-validation-summary=""></span>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

