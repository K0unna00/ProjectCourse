@model List<Marksheet>
@{
    ViewData["Title"] = "CreateGroup";
    int count = 1;
}
<h3>Marksheets</h3>
@if (ViewBag.Check)
{
    <a class="btn btn-primary" asp-action="CreateMarksheet" asp-controller="Marksheet">Create Marksheet</a>

}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Assignment</th>
            <th scope="col">Actions</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@count</th>
                <td>@i.Name</td>
                <td>@i.Assignment.Name</td>
                <td>
                    <a class="btn btn-warning" asp-action="Index" asp-controller="Question" asp-route-id="@i.Id">Questions</a>
                    <a class="btn btn-success" asp-action="Index" asp-controller="Marker" asp-route-id="@i.Id">Markers</a>
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Team" asp-route-id="@i.Id">Teams</a>
                    <a class="btn btn-info" asp-action="Info" asp-controller="Marksheet" asp-route-id="@i.Id">Info</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Marksheet" asp-route-id="@i.Id">Delete</a>
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>

