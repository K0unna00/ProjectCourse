@using FinalAgain.Services
@inject LayoutService layoutService
@{
    List<AppUser> Users = layoutService.GetUsers();
    var user = Users.FirstOrDefault(x => x.UserName == User.Identity.Name);
    var role = layoutService.GetRole(user);
}
<DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
        <link rel="icon" type="image/png" href="~/assets/img/favicon.png">

        <title>

            Material Dashboard 2  by Creative Tim





        </title>



        <!--     Fonts and icons     -->
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />

        <!-- Nucleo Icons -->
        <link href="~/assets/css/nucleo-icons.css" rel="stylesheet" />
        <link href="~/assets/css/nucleo-svg.css" rel="stylesheet" />

        <!-- Font Awesome Icons -->
        <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>

        <!-- Material Icons -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <!-- CSS Files -->



        <link id="pagestyle" href="~/assets/css/material-dashboard.css?v=3.0.4" rel="stylesheet" />





    </head>


    <body class="g-sidenav-show  bg-gray-100">





        <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3   bg-gradient-dark" id="sidenav-main">

            <div class="sidenav-header">
                <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
                <a class="navbar-brand m-0" asp-action="Index" asp-controller="Home">
                    <img src="~/assets/img/logo-ct.png" class="navbar-brand-img h-100" alt="main_logo">
                    <span class="ms-1 font-weight-bold text-white">Project Course</span>
                </a>
            </div>


            <hr class="horizontal light mt-0 mb-2">

            <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
                <ul class="navbar-nav">
                    @if (role != "Marker")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-action="Index" asp-controller="Assignment">
                                <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                                    <i class="material-icons opacity-10">assignment</i>
                                </div>
                                <span class="nav-link-text ms-1">Assingments (Only Admins)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-action="Index" asp-controller="Marksheet">
                                <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                                    <i class="material-icons opacity-10">assignment</i>
                                </div>
                                <span class="nav-link-text ms-1">Marksheets (Only Admins)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-action="Teams" asp-controller="Team">
                                <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                                    <i class="material-icons opacity-10">assignment</i>
                                </div>
                                <span class="nav-link-text ms-1">Teams (Only Admins)</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-action="Index" asp-controller="MyMarksheet" asp-route-userId="@user.Id">
                                <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                                    <i class="material-icons opacity-10">assignment</i>
                                </div>
                                <span class="nav-link-text ms-1">MyMarksheets (Only Markers)</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>

        </aside>

        <main class="main-content border-radius-lg ">
            <!-- Navbar -->

            <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
                <div class="container-fluid py-1 px-3">
                    <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4 justify-content-end" id="navbar">

                        <ul class="navbar-nav ">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item d-flex align-items-center me-4">
                                    <i class="fa fa-user me-sm-1"></i>
                                    <span class="d-sm-inline d-none">@User.Identity.Name</span>
                                </li>
                                <li class="nav-item d-flex align-items-center">
                                    <a asp-action="Logout" asp-controller="UserAccount" class="nav-link text-body font-weight-bold px-0">
                                        <span class="d-sm-inline d-none">LogOut</span>
                                    </a>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item d-flex align-items-center">
                                    <a asp-action="Login" asp-controller="UserAccount" class="nav-link text-body font-weight-bold px-0">
                                        <span class="d-sm-inline d-none">LogIn</span>
                                    </a>
                                </li>

                            }


                        </ul>
                    </div>
                </div>
            </nav>

            <!-- End Navbar -->
            @RenderBody()


        </main>



















        <!--   Core JS Files   -->
        <script src="~/assets/js/core/popper.min.js"></script>
        <script src="~/assets/js/core/bootstrap.min.js"></script>
        <script src="~/assets/js/plugins/perfect-scrollbar.min.js"></script>
        <script src="~/assets/js/plugins/smooth-scrollbar.min.js"></script>









































































        <script>
            var win = navigator.platform.indexOf('Win') > -1;
            if (win && document.querySelector('#sidenav-scrollbar')) {
                var options = {
                    damping: '0.5'
                }
                Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
            }
        </script>

    </body>

</html>
