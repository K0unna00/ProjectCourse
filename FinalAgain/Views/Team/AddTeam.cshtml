@model List<Team>
@{
    ViewData["Title"] = "CreateGroup";
    int count = 1;
}
<h3>Add Team</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">TeamNo</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@count</th>
                <td>@i.TeamNo</td>
                <td>
                    <a class="btn btn-success" asp-action="AddTeamOnMarksheet" asp-controller="Team" asp-route-id="@i.Id" asp-route-mrkId="@ViewBag.MarksheetId">Add</a>
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>

